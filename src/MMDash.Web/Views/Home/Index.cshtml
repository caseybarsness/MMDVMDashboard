@using IntelliTect.Coalesce.TypeDefinition
@{
    ViewData["Title"] = "Home";
}
<div class="content" style="margin: 100px; margin-top: 0px">
    <div class="row" data-bind="foreach: servers.items">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3><span class="online fa-server"></span> <a data-bind="attr: {href: '/MMDVMServer/?server=' + serverSearchString()}, text: displayName()"></a></h3>
                </div>
                <div class="panel-body">
                    <span class="online fa-arrow-up"></span> <span data-bind="text: onlineLogs"></span> Online <br />
                    <span class="offline fa-arrow-down"></span> <span data-bind="text: offlineLogs"></span> Offline <br />
                    <span class="online fa-table"></span> <span data-bind="text: logCount"></span> Logs <br />
                    <span class="online fa-wifi"></span> <span data-bind="text: transmissionsAndStreams"></span> Transmissions and Streams
                </div>
            </div>
        </div>
    </div>

    <div class="row" data-bind="visible: isLoading">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><img src="~/img/loading.gif" height="40" /> Loading Server Details</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><span class="online fa-server"></span> Real Time Net Watch</h4>
                    Filters: <div id="my-tag-list" class="tag-list"></div>
                </div>
                <div class="panel-body" id="netwatch">
                    <table class='table table- striped table-bordered table-hover dataTable no- footer'>
                        <tr>
                            <th>Start Time</th>
                            <th>Duration</th>
                            <th>Source Peer</th>
                            <th>Source Radio</th>
                            <th>Dest. Bridge</th>
                            <th>dBm</th>
                            <th>Site Name</th>
                            <th>Loss Rate</th>
                        </tr>
                    </table>
                </div>
                <div class="panel-footer">
                    <a href="http://pnw.pnwdigital.net:42420/MinimalNetwatch" target="_blank">PNW c-Bridge Minimal Netwatch</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/home.index.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-tags/js/bootstrap-tags.min.js"></script>
    <link href="~/lib/bootstrap-tags/css/bootstrap-tags.css" rel="stylesheet" />
    <script src="~/js/signalr-client-1.0.0-alpha2-final.min.js"></script>
    <script src="~/js/netwatch.js" asp-append-version="true"></script>

}
